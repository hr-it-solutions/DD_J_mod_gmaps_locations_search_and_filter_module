<extension  type="module" version="3.5.0" method="upgrade">
    <name>mod_dd_gmaps_locations_searchfilter</name>
    <creationDate>06.04.2017</creationDate>
    <author>HR IT-Solutions Florian HÃ¤usler</author>
    <authorEmail>info@hr-it-solutions.com</authorEmail>
    <authorUrl>https://www.hr-it-solutions.com</authorUrl>
    <copyright>Copyright (C) 2011 - 2019 HR-IT-Solutions GmbH</copyright>
    <license>GNU/GPLv2 only</license>
    <version>1.1.1.4</version>
    <description>MOD_DD_GMAPS_LOCATIONS_SEARCHFILTER_XML_DESCRIPTION</description>

    <files>
        <filename module="mod_dd_gmaps_locations_searchfilter">mod_dd_gmaps_locations_searchfilter.php</filename>
        <filename>helper.php</filename>
        <folder>tmpl</folder>
    </files>
    <config>
        <fields name="params" >
            <fieldset name="basic">

                <field
                        name="show_locationsearch"
                        type="list"
                        label="MOD_DD_GMAPS_LOCATIONS_SEARCHFILTER_SHOW_LOCATIONSEARCH_LABEL"
                        description="MOD_DD_GMAPS_LOCATIONS_SEARCHFILTER_SHOW_LOCATIONSEARCH_DESC"
                        default="1"
                >
                    <option value="1">JSHOW</option>
                    <option value="0">JHIDE</option>
                </field>

                <field
                        name="show_geolocalisation"
                        type="list"
                        label="MOD_DD_GMAPS_LOCATIONS_SEARCHFILTER_SHOW_GEOLOCALISATION_LABEL"
                        description="MOD_DD_GMAPS_LOCATIONS_SEARCHFILTER_SHOW_GEOLOCALISATION_DESC"
                        default="1"
                >
                    <option value="1">JSHOW</option>
                    <option value="0">JHIDE</option>
                </field>

                <field
                        name="show_fulltextsearch"
                        type="list"
                        label="MOD_DD_GMAPS_LOCATIONS_SEARCHFILTER_SHOW_FULLTEXTSEARCH_LABEL"
                        description="MOD_DD_GMAPS_LOCATIONS_SEARCHFILTER_SHOW_FULLTEXTSEARCH_DESC"
                        default="0"
                >
                    <option value="1">JSHOW</option>
                    <option value="0">JHIDE</option>
                </field>

                <field
                        name="show_categoryfilter"
                        type="list"
                        label="MOD_DD_GMAPS_LOCATIONS_SEARCHFILTER_SHOW_CATEGORYFILTER_LABEL"
                        description="MOD_DD_GMAPS_LOCATIONS_SEARCHFILTER_SHOW_CATEGORYFILTER_DESC"
                        default="0"
                >
                    <option value="1">JSHOW</option>
                    <option value="0">JHIDE</option>
                </field>

                <field type="spacer" name="spacer_searchfilter_hr" label="&lt;hr/&gt;" description="MOD_DD_GMAPS_LOCATIONS_SEARCHFILTER_EXPERIMENTAL_DESC" />
                <field type="spacer" name="spacer_searchfilter" label="MOD_DD_GMAPS_LOCATIONS_SEARCHFILTER_EXPERIMENTAL_LABEL" description="MOD_DD_GMAPS_LOCATIONS_SEARCHFILTER_EXPERIMENTAL_DESC" />

                <field
                        name="show_federalstatefilter"
                        type="list"
                        label="MOD_DD_GMAPS_LOCATIONS_SEARCHFILTER_SHOW_FEDERALSTATEFILTER_LABEL"
                        description="MOD_DD_GMAPS_LOCATIONS_SEARCHFILTER_SHOW_FEDERALSTATEFILTER_DESC"
                        default="0"
                >
                    <option value="1">JSHOW</option>
                    <option value="0">JHIDE</option>
                </field>

                <field
                        name="countries_reduced_selection"
                        type="list"
                        class="btn-group btn-group-yesno"
                        default="0"
                        label="MOD_DD_GMAPS_LOCATIONS_SEARCHFILTER_COUNTRIES_REDUCED_SELECTION_LABEL"
                        description="MOD_DD_GMAPS_LOCATIONS_SEARCHFILTER_COUNTRIES_REDUCED_SELECTION_DESC" >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>

            </fieldset>
            <fieldset name="advanced">
                <field
                        name="layout"
                        type="modulelayout"
                        label="JFIELD_ALT_LAYOUT_LABEL"
                        description="JFIELD_ALT_MODULE_LAYOUT_DESC"
                />
            </fieldset>
        </fields>
    </config>

    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.mod_dd_gmaps_locations_searchfilter.ini</language>
        <language tag="en-GB">en-GB/en-GB.mod_dd_gmaps_locations_searchfilter.sys.ini</language>
        <language tag="de-DE">de-DE/de-DE.mod_dd_gmaps_locations_searchfilter.ini</language>
        <language tag="de-DE">de-DE/de-DE.mod_dd_gmaps_locations_searchfilter.sys.ini</language>
    </languages>

    <media destination="mod_dd_gmaps_locations_searchfilter" folder="media">
        <folder>css</folder>
        <folder>img</folder>
        <folder>js</folder>
    </media>

</extension>